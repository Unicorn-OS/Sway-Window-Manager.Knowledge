# mouse sensitivity
# from: https://www.reddit.com/r/swaywm/comments/q5tpay/apply_mouse_input_config_to_all_mice_that_connect/

input type:pointer {
    accel_profile "adaptive" # disable mouse acceleration (enabled by default; to set it manually, use "adaptive" instead of "flat")
    pointer_accel 1 # set mouse sensitivity (between -1 and 1)
}
